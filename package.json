{
  "name": "@validatedid/did-auth",
  "version": "2.1.1",
  "description": "Validated ID Authentication library that implements an OIDC-SIOP with DIDs",
  "author": "Validated ID",
  "license": "Apache-2.0",
  "repository": {
    "type": "github",
    "url": "https://github.com/validatedid/did-auth-oidc-siop.git"
  },
  "keywords": [
    "Authentication",
    "DID-Auth",
    "SIOP",
    "OIDC",
    "DID-SIOP"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "audit": "audit-ci --moderate",
    "prepare": "npm run build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist ./coverage",
    "compile": "tsc",
    "compile:dev": "tsc -w",
    "coverage": "jest --coverage",
    "lint-staged": "lint-staged",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' 'tests/**/*.{js,ts,tsx}'",
    "full-lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --fix && prettier --write 'src/**/*.{js,ts,tsx}'",
    "format": "prettier --write 'src/**/*.{js,ts,tsx}' 'tests/**/*.{js,ts,tsx}'",
    "release": "standard-version",
    "test": "jest --runInBand --verbose false --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:unit": "jest --runInBand --testPathIgnorePatterns=e2e --verbose false --detectOpenHandles --forceExit",
    "test:e2e": "jest --runInBand --testPathIgnorePatterns=unit --verbose false --detectOpenHandles --forceExit",
    "clearCache": "jest --clearCache"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@tsconfig/node12": "^1.0.7",
    "@types/bs58": "^4.0.1",
    "@types/elliptic": "^6.4.12",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/sha.js": "^2.4.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "audit-ci": "^3.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.2",
    "jest-junit": "^12.0.0",
    "jwt-decode": "^3.1.2",
    "lint-staged": "^10.5.3",
    "moment": "^2.29.1",
    "prettier": "^2.2.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@validatedid/did-jwt": "^1.0.3",
    "@validatedid/vid-did-resolver": "0.0.1",
    "axios": "^0.21.1",
    "base64url": "^3.0.1",
    "bs58": "^4.0.1",
    "did-resolver": "^2.1.2",
    "elliptic": "^6.5.3",
    "ethers": "^5.0.24",
    "jose": "^3.5.0",
    "sha.js": "^2.4.11",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
